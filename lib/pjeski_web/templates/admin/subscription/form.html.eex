<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="is-size-4 has-text-danger">
      <p><%= gettext("Oops, something went wrong! Please check the errors below.") %></p>
    </div>
  <% end %>

  <div class="field">
    <%= label f, gettext("Subscription name"), class: 'label' %>
    <%= text_input f, :name, class: 'button' %>
    <%= error_tag f, :name %>
  </div>

  <div class="field">
    <%= label f, gettext("E-mail address"), class: 'label' %>
    <%= text_input f, :email, class: 'button' %>
    <%= error_tag f, :email %>
  </div>

  <div class="field">
    <%= label f, gettext("Expires on"), class: 'label' %>
    <%= date_select f, :expires_on, class: 'button' %>
    <%= error_tag f, :expires_on %>
  </div>

  <div>
    <%= submit gettext("Save"), class: 'button is-primary' %>
  </div>
<% end %>
