<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="is-size-4 has-text-danger">
      <p><%= gettext("Oops, something went wrong! Please check the errors below.") %></p>
    </div>
  <% end %>

  <div class="field">
    <%= label f, :name, gettext("Name and surname"), class: 'label' %>
    <%= text_input f, :name, class: 'input' %>
    <%= error_tag f, :name %>
  </div>

  <div class="field">
    <%= label f, :time_zone, gettext("Time zone"), class: 'label' %>
    <%= select f, :time_zone, time_zones_select_options(), class: 'input use-select2' %>
    <%= error_tag f, :email %>
  </div>

  <div class="field">
    <%= label f, :locale, gettext("Language"), class: 'label' %>
    <%= select f, :locale, languages_select_options(), class: 'input' %>
    <%= error_tag f, :locale %>
  </div>

  <div class="field">
    <%= label f, :email, gettext("E-mail address"), class: 'label' %>
    <%= text_input f, Pow.Ecto.Schema.user_id_field(@changeset), class: 'input' %>
    <%= error_tag f, Pow.Ecto.Schema.user_id_field(@changeset) %>
  </div>

  <div class="field">
    <%= label f, :password, gettext("New password"), class: 'label' %>
    <%= password_input f, :password, class: 'input' %>
    <%= error_tag f, :password %>
  </div>

  <div class="field">
    <%= label f, :admin_notes, gettext("Admin notes"), class: 'label' %>
    <%= textarea f, :admin_notes, class: 'textarea' %>
    <%= error_tag f, :admin_notes %>
  </div>

  <div class="field">
    <%= label f, :subscription_id, ~s/#{gettext("Current subscription")} #{gettext("(will keep previous one available on change)")}/, class: 'label' %>
    <%= select f, :subscription_id, all_subscriptions_options_with_empty(), class: 'input use-select2' %>
    <%= error_tag f, :subscription_id %>
  </div>
  <div>
    <%= submit gettext("Save"), class: 'button is-primary' %>
  </div>
<% end %>

<script type="text/javascript"> $('.use-select2').select2({placeholder: "<%= gettext("Empty") %>"}); </script>
