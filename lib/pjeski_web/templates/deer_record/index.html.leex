<%= if @current_subscription_id do %>
  <%= live_render(
      @socket,
      PjeskiWeb.SubscriptionNavigationLive,
      container: {:div, class: "navbar is-dark"},
      id: "navigation_live",
      session: %{
        "header_text" => @current_subscription_name,
        "subscription_id" => @current_subscription_id,
        "subscription_tables" => @current_subscription_tables,
        "locale" => @locale
      }
  ) %>
<% end %>

<%= cond do
    @editing_record ->
      live_component(
        @socket,
        PjeskiWeb.DeerRecordsLive.Modal.EditComponent,
        id: "edit",
        changeset: @editing_record,
        subscription: @current_subscription,
        table_id: @table_id,
        table_name: @table_name
      )
    @new_record ->
      live_component(
        @socket,
        PjeskiWeb.DeerRecordsLive.Modal.NewComponent,
        id: "new",
        changeset: @new_record,
        subscription: @current_subscription,
        table_id: @table_id,
        table_name: @table_name
      )
    true -> ""
end %>

<section class="section">
  <div class="columns has-background-white sticky">
    <div class="column is-2">
      <div class="field">
        <a phx-click="new" class="button is-primary">
          <%= gettext("New record") %>
        </a>
      </div>
    </div>

    <div class="column is-8">
      <div class="field has-addons">
        <p class="control">
            <%= if @query != "" && @query != nil do %>
              <button class="button is-inline" type="submit" phx-click="clear" onclick="window.scrollTo(0,0)">
                <%= gettext("Clear") %>
              </button>
            <% end %>
        </p>

        <p class="is-fullwidth">
          <form phx-submit="submit" phx-change="filter" class="field has-addons overwrite-fullwidth">
            <p class="control is-expanded">
              <input
                class="input"
                type="text" name="query"
                list="matches"
                placeholder="<%= gettext("Search...") %>"
                value="<%= @query %>"
                onkeypress="window.scrollTo(0,0)"
                phx-debounce="300" />
            </p>

            <p class="control">
              <button class="button" type="submit">
                <%= gettext("Search") %>
              </button>
            </p>
          </form>

        </p>
      </div>
      <%= if (current_records_count = length(@current_records)) > 0 do %>
        <%= gettext("They are %{count} records selected.", count: current_records_count) %>
        |
        <a phx-click="clear_selected"><%= gettext("Unselect") %></a>
        |
        <a phx-click="delete_selected" data-confirm="<%= gettext("Are you sure to REMOVE all %{count} selected records?", count: current_records_count) %>">
          <%= gettext("Delete all (%{count})", count: current_records_count) %>
        </a>
      <% else %>
        <br>
      <% end %>
    </div>
  </div>

  <div class="columns is-mobile">
    <div class="column <%= if length(@current_records) > 0, do: "is-hidden-mobile is-half-tablet" %>">
        <%= if @count == 0 do %>
          <div class="section">
            <h1 class="title has-text-grey-light has-text-centered">
              <%= gettext("Could not find anything...") %>
            </h3>

            <%= if @page > 1 do %>
              <h3 class="subtitle has-text-grey-light has-text-centered">
                <%= gettext("There are no more records") %>
              </h3>
            <% end %>
          </div>
        <% end %>

        <%= for record <- @records do %>
          <div class="box <%= classes_for_record_box(@current_user.id, record, @current_records) %>" phx-click="show" phx-value-record_id="<%= record.id %>">
            <article class="media">
              <div class="media-content">
                <div class="content">
                  <%= for %{id: column_id, name: column_name} <- deer_columns_from_subscription(@current_subscription, @table_id) do %>
                      <%= column_name %>: <strong><%= deer_field_content_from_column_id(record, column_id) %></strong>
                  <% end %>
                </div>
              </div>
            </article>
          </div>
        <% end %>

        <%= render(PjeskiWeb.PaginationView, "simple.html", page: @page, count: @count, per_page: @per_page) %>
    </div>

    <%= for record <- @current_records do %>
      <div class="column">
        <div class="sticky overwrite-padding-top-60">
          <article class="section">
            <%= live_component(
                @socket,
                PjeskiWeb.DeerRecordsLive.ShowComponent,
                id: record.id,
                record: record,
                subscription: @current_subscription,
                table_id: @table_id
              )
            %>

            <%= live_component(@socket, PjeskiWeb.DeerRecordsLive.DropzoneComponent, id: record.id) %>
          </article>
        </div>
      </div>
    <% end %>
  </div>
</section>
