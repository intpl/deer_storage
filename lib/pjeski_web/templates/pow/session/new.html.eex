<section class="hero is-light">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= gettext("Log in") %>
      </h1>
      <h2 class="subtitle">
        <%= gettext("Log in to Clinic Management System") %>
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <%= form_for @changeset, @action, [as: :user], fn f -> %>
    <%= if @changeset.action do %>
    <div class="help is-danger">
      <p><%= gettext("Oops, something went wrong! Please check the errors below.") %></p>
    </div>
    <% end %>

    <div class="field">
      <%= label f, Pow.Ecto.Schema.user_id_field(@changeset), class: 'label' %>
      <%= text_input f, Pow.Ecto.Schema.user_id_field(@changeset), class: 'button' %>
      <%= error_tag f, Pow.Ecto.Schema.user_id_field(@changeset) %>
    </div>

    <div class="field">
      <%= label f, :password, class: 'label' %>
      <%= password_input f, :password, class: 'button' %>
      <%= error_tag f, :password %>
    </div>

    <div>
      <%= submit gettext("Sign in"), class: 'button' %>
    </div>
    <% end %>


    <span><%= link gettext("Register"), to: Routes.pow_registration_path(@conn, :new) %></span>
  </div>
</section>
