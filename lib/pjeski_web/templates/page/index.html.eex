<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= gettext("Pjeski system") %>
      </h1>
      <h2 class="subtitle">
        <%= gettext("Welcome to Pjeski System") %>
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <section class="row">
      <article class="column">
        <div>
          <%= if @current_user do %>
            <%= gettext("Welcome to Pjeski!!!") %>
          <% else %>
          <p><%= gettext("Not logged in") %></p>
          <span><%= link gettext("Register"), to: Routes.pow_registration_path(@conn, :new) %></span>
          |
          <span><%= link gettext("Log in"), to: Routes.pow_session_path(@conn, :new) %></span>
          <% end %>
        </div>
      </article>
    </section>

  </div>
</section>
