<section class="hero is-medium is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= gettext("Welcome to DeerStorage") %>
      </h1>
      <h2 class="subtitle">
        <%= gettext("Your group files' deer-ectory!") %>
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <section class="row">
      <article class="column">
        <div>
          <%= if @current_user do %>
            <%= link gettext("Go back to your database"), to: Routes.live_path(PjeskiWeb.Endpoint, PjeskiWeb.DeerDashboardLive.Index) %>
          <% else %>
            <p><%= gettext("Not logged in") %></p>
            <span><%= link gettext("Register"), to: Routes.registration_path(@conn, :new) %></span>
            |
            <span><%= link gettext("Sign in"), to: Routes.session_path(@conn, :new) %></span>
          <% end %>
        </div>
      </article>
    </section>

  </div>
</section>
